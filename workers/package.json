{
    "name": "rsi-workers",
    "version": "1.0.0",
    "description": "Cloudflare Workers backend for RSI Widget App",
    "main": "src/index.ts",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "build": "wrangler build",
        "test": "wrangler dev --test",
        "d1:create": "wrangler d1 create rsi-db",
        "d1:migrate": "wrangler d1 execute rsi-db --file=schema.sql",
        "d1:query": "wrangler d1 execute rsi-db --command",
        "kv:create": "wrangler kv:namespace create KV",
        "secret:put": "wrangler secret put"
    },
    "keywords": [
        "cloudflare",
        "workers",
        "rsi",
        "trading",
        "alerts",
        "widget"
    ],
    "author": "RSI Widget Team",
    "license": "MIT",
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20251014.0",
        "@types/node": "^20.19.23",
        "typescript": "^5.9.3",
        "wrangler": "^3.114.15"
    },
    "dependencies": {
        "hono": "^3.11.0"
    }
}
