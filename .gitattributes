# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.dart text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.html text eol=lf
*.css text eol=lf
*.xml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.kt text eol=lf
*.swift text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.cc text eol=lf
*.m text eol=lf
*.mm text eol=lf
*.sh text eol=lf
*.toml text eol=lf
*.sql text eol=lf

# Explicitly declare files that are always text and normalize them
*.txt text
*.log text
*.conf text
*.config text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.jar binary
*.class binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
